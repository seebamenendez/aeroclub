<div class="row">
   <div class="col-lg-12">
      <h3>Vuelos
         <small>Listado de vuelos por fecha</small>
      </h3>


      <%= form_tag(monthly_path, method: 'get') do  %>
        <%= text_field_tag :year,'',  placeholder: 'Year...', :size => 40 %>

        <%= text_field_tag :month,'',  placeholder: 'Month...', :size => 40 %>
        <%= button_tag 'Buscar', type: 'submit',  class: 'btn btn-info btn-lg' %>
      <% end %>

   </div>
</div>
<!-- START row-->
<div class="row">
   <div class="col-lg-12">
      <!-- START panel-->
      <div class="panel panel-default">
         <div class="panel-body">
            <!-- START table-responsive-->
            <div class="table-responsive">
               <table class="table table-striped table-bordered table-hover">
                  <thead>
                     <tr>
                        <th>#</th>
                        <th>Avion</th>
                        <th>Matricula</th>
                        <th>Modelo</th>
                        <th>Fecha</th>
                        <th>Piloto</th>
                        <th>Tipo de vuelo</th>
                        <th>Estado</th>
                     </tr>
                  </thead>
                  <tbody>
                  <% @monthly.each do |flight|%>
                     <tr>
                        <td></td>
                        <td><%= flight.plane.name %></td>
                        <td><%= flight.plane.matricula %></td>
                        <td><%= flight.plane.model %></td>
                        <td><%= flight.date %></td>
                        <td><%= flight.try(:pilot).try(:complete_name) %></td>
                        <td><%= flight.flight_type.name_flight %></td>
                        <td><%= flight.status %></td>
                     </tr>
                  <% end %>
                  </tbody>
               </table>
            </div>
            <!-- END table-responsive-->
            <div class='row actions' style='margin-top: 30px'>
              <div class='col-xs-10'>
                  <%= link_to 'Volver', lists_path, class: 'btn btn-default' %>
              </div>
            </div>
         </div>
      </div>
      <!-- END panel-->
   </div>
   
</div>
