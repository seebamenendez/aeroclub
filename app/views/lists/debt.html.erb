<div class="row">
   <div class="col-lg-12">
      <h3>Personas
         <small>Listado de personas con deudas</small>
      </h3>

      
   </div>
</div>
<!-- START row-->
<div class="row">
   <div class="col-lg-12">
      <!-- START panel-->
      <div class="panel panel-default">
         <div class="panel-body">
            <!-- START table-responsive-->
            <div class="table-responsive">
               <table class="table table-striped table-bordered table-hover">
                  <thead>
                     <tr>
                        <th>#</th>
                        <th>Nombre</th>
                        <th>Apellido</th>
                        <th>Cedula</th>
                        <th>Email</th>
                        <th>Direccion</th>
                        <th>Telefono</th>
                        <th>Edad</th>
                        <th>Estado</th>
                        <th>Total Adeudado</th>
                     </tr>
                  </thead>
                  <tbody>
                  <% @people.each do |person|%>
                     <tr>
                        <td></td>
                        <td><%= person.name %></td>
                        <td><%= person.surname %></td>
                        <td><%= person.id_number %></td>
                        <td><%= person.mail %></td>
                        <td><%= person.home %></td>
                        <td><%= person.phone %></td>
                        <td><%= person.age %></td>
                        <td>
                        <% if person.status %>
                            <span>Activo</span>
                        <% else %>
                            <span>Deshabilitado</span>
                        <% end %>
                        </td>
                        <td><%= person.debt %></td>
                     </tr>
                  <% end %>
                  </tbody>
               </table>
            </div>
            <div class='row actions' style='margin-top: 30px'>
              <div class='col-xs-10'>
                  <%= link_to 'Volver', lists_path, class: 'btn btn-default' %>
              </div>
            </div>
         </div>
      </div>
      <!-- END panel-->
   </div>
</div>
