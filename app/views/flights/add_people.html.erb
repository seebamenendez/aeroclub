<div class="row">
   <div class="col-lg-12">
      <h3>Agregar Personas
         <small>Listado para agregar personas al vuelo</small>
      </h3>

      <%= form_tag(flight_add_people_path(@flight.id), method: 'get') do  %>
        <%= text_field_tag :q %>
        <%= button_tag 'Buscar', type: 'submit',  class: 'btn btn-info btn-lg' %>
      <% end %>

   </div>
</div>
<!-- START row-->
<div class="row">
   <div class="col-lg-12">
      <!-- START panel-->
      <div class="panel panel-default">
         <div class="panel-body">
            <!-- START table-responsive-->
            <div class="table-responsive">
               <table class="table table-striped table-bordered table-hover">
                  <thead>
                     <tr>
                        <th>#</th>
                        <th>Nombre</th>
                        <th>Apellido</th>
                        <th>Email</th>
                        <th>Direccion</th>
                        <th>Telefono</th>
                        <th>Edad</th>
                        <th>Piloto</th>
                        <th>Socio</th>
                     </tr>
                  </thead>
                  <tbody>
                  <% @people.each do |person|%>
                     <tr>
                        <td>
                          <%= form_tag flight_add_person_path(params[:id], person.id) do %>
                            <button type="submit">Agregar</button>
                          <% end %>
                        </td>
                        <td><%= person.name %></td>
                        <td><%= person.surname %></td>
                        <td><%= person.mail %></td>
                        <td><%= person.home %></td>
                        <td><%= person.phone %></td>
                        <td><%= person.age %></td>
                        <td><% if person.pilot %>
                                 Si
                               <% else %>
                                 No 
                              <% end %> 
                        </td>

                        <td><% if person.guest %>
                                 Si
                               <% else %>
                                 No 
                              <% end %> 
                        </td>
                     </tr>
                  <% end %>
                  </tbody>
               </table>
            </div>
            <!-- END table-responsive-->
         </div>
      </div>
      <!-- END panel-->
   </div>
   <div>
     <%= link_to 'Volver', @flight, class: 'btn btn-default' %>
   </div>
</div>
