<h3>Crear nueva persona
   <small>Llene el formulario con los datos necesarios para crear una persona</small>
</h3>
<!-- START panel-->
<div class="panel panel-default">
   <div class="panel-heading">Crear persona</div>
   <div class="panel-body">
      <%= form_for person, html: {class: 'form-horizontal'} do |f| %>
         <div class="form-group">
            <label class="col-lg-2 control-label">Nombre</label>
            <div class="col-lg-10">
             <%= f.text_field :name, placeholder: 'Nombre de la persona', class: 'form-control', required:'required' %>
            </div>
         </div>
         <div class="form-group">
            <label class="col-lg-2 control-label">Apellido</label>
            <div class="col-lg-10">
              <%= f.text_field :surname, placeholder: 'Apellido de la persona', class: 'form-control', required:'required' %>
             </div>
         </div>
          <div class="form-group">
            <label class="col-lg-2 control-label">Cedula</label>
            <div class="col-lg-10">
              <%= f.text_field :id_number, placeholder: 'Cedula de la persona', class: 'form-control', required:'required' %>
             </div>
         </div>
         <div class="form-group">
            <label class="col-lg-2 control-label">Email</label>
            <div class="col-lg-10">
              <%= f.text_field :mail, placeholder: 'Email de la persona', class: 'form-control', required:'required' %>
            </div>
         </div>
         <div class="form-group">
            <label class="col-lg-2 control-label">Direccion</label>
            <div class="col-lg-10">
              <%= f.text_field :home, placeholder: 'Direccion de la persona', class: 'form-control' %>
            </div>
         </div>
         <div class="form-group">
            <label class="col-lg-2 control-label">Telefono</label>
            <div class="col-lg-10">
              <%= f.text_field :phone, placeholder: 'Telefono de la persona', class: 'form-control', required:'required' %>
            </div>
         </div>
         <div class="form-group">
            <label class="col-lg-2 control-label">Edad</label>
            <div class="col-lg-10">
              <%= f.text_field :age, placeholder: 'Edad de la persona', class: 'form-control' %>
            </div>
         </div>
         <div class="form-group">
            <label class="col-lg-2 control-label">Nuevo piloto?</label>
            <div class="col-lg-10"><%= f.check_box :pilot, class: 'form-control' %></div>
         </div>
     <div class="form-group">
            <label class="col-lg-2 control-label">Nuevo socio?</label>
            <div class="col-lg-10"><%= f.check_box :guest, class: 'form-control' %></div>
         </div>

         <div class="form-group">
            <div class="col-lg-offset-2 col-lg-10">
            <%= f.submit 'Guardar Persona', class: 'btn btn-success'%>
            <% if person.new_record? %>
              <%= link_to 'Volver', people_path, class: 'btn btn-danger' %>
            <% else %>
              <%= link_to 'Volver', people_path(person), class: 'btn btn-danger' %>
            <% end %>
          </div>
         </div>
      <% end %>
   </div>
</div>
