<div class="row">
   <div class="col-lg-12">
      <h3>Pilotos habilitados
         <small>Listado de pilotos</small>
      </h3>

      <%= form_tag(pilot_habilitations_path, method: 'get') do  %>
        <%= text_field_tag :q %>
        <%= button_tag 'Buscar', type: 'submit',  class: 'btn btn-info btn-lg' %>
      <% end %>

   </div>
</div>
<!-- START row-->
<div class="row">
   <div class="col-lg-12">
      <!-- START panel-->
      <div class="panel panel-default">
         <div class="panel-body">
            <!-- START table-responsive-->
            <div class="table-responsive">
               <table class="table table-striped table-bordered table-hover">
                  <thead>
                     <tr>
                        <th>#</th>
                        <th>Piloto</th>
                        <th>Fecha de expedicion</th>
                        <th>Fecha de vencimiento</th>
                        <th>Estado</th>
                     </tr>
                  </thead>
                  <tbody>
                  <% @pilot.each do |pilot_hab|%>
                     <tr>
                        <td><a href="<%= pilot_habilitations_path(pilot) %>">Ver</a></td>
                        <td><%= pilot_hab.people.name %></td>
                        <td><%= pilot_hab.date_start %></td>
                        <td><%= pilot_hab.date_expiration %></td>
                        <td><%= pilot_hab.status %>
                                
                        </td>
                     </tr>
                  <% end %>
                  </tbody>
               </table>
            </div>
            <!-- END table-responsive-->
            <div class='row actions' style='margin-top: 30px'>
              <div class='col-xs-10'>
                  <%= link_to 'Nuevo', new_pilot_habilitation_path, class: 'btn btn-success' %>
                  <%= link_to 'Volver', root_path, class: 'btn btn-default' %>
              </div>
            </div>
         </div>
         
      </div>
      <!-- END panel-->
   </div>
   
</div>
