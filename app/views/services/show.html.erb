<h3>Detalles de
   <small><%= @service.name %></small>
</h3>

<div class="panel">
   <div class="panel-heading">Detalles del service</div>
   <table id="plane" style="clear: both" class="table table-bordered table-striped">
      <tbody>
         <tr>
            <td width="35%">Nombre</td>
            <td width="65%"><strong><%= @service.name %></strong>
            </td>
         </tr>
         <tr>
            <td width="35%">Descripcion</td>
            <td width="65%"><strong><%= @service.description %></strong>
            </td>
         </tr>
         <tr>
            <td width="35%">Fecha</td>
            <td width="65%"><strong><%= @service.date %></strong>
            </td>
         </tr>
         <tr>
            <td width="35%">Avion reparado</td>
            <td width="65%"><strong><%= @service.plane.name %></strong>
            </td>
         </tr>
         <tr>
            <td width="35%">Estado</td>
            <td width="65%"><strong><% if @service.status %></strong>
                <span>Activo</span>
              <% else %>
                <span>Deshabilitado</span>
              <% end %>
            </td>
         </tr>
      </tbody>
   </table>
</div>

<a href="<%= edit_service_path(@service) %>" class='btn btn-success'>Modificar</a>

<%= link_to 'Eliminar', @service, method: :delete, data: {confirm: "Estas seguro que quiere eliminar?"}, class: 'btn btn-danger' %>
<%= link_to 'Volver', services_path, class: 'btn btn-default' %>


