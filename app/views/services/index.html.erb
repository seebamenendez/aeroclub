<div class="row">
   <div class="col-lg-12">
      <h3>Services
         <small>Listado de services del sistema</small>
      </h3>

      <%= form_tag(services_path, method: 'get') do  %>
        <%= text_field_tag :q,'',  placeholder: 'Busque por nombre, matricula y fecha', :size => 40 %>
        <%= button_tag 'Buscar', type: 'submit',  class: 'btn btn-info btn-lg' %>
      <% end %>

   </div>
</div>
<!-- START row-->
<div class="row">
   <div class="col-lg-12">
      <!-- START panel-->
      <div class="panel panel-default">
         <div class="panel-body">
            <!-- START table-responsive-->
            <div class="table-responsive">
               <table class="table table-striped table-bordered table-hover">
                  <thead>
                     <tr>
                        <th>#</th>
                        <th>Nombre</th>
                        <th>Descripcion</th>
                        <th>Fecha</th>
                        <th>Avion reparado</th>
                        <th>Matricula</th>
                        <th>Estado</th>
                     </tr>
                  </thead>
                  <tbody>
                  <% @services.each do |service|%>
                     <tr>
                        <td><a href="<%= service_path(service) %>">Ver</a></td>
                        <td><%= service.name %></td>
                        <td><%= service.description %></td>
                        <td><%= service.date %></td>
                        <td><%= service.try(:plane).try(:name) %></td>
                        <td><%= service.try(:plane).try(:matricula) %></td>
                        <td>
                        <% if service.status %>
                            <span>Activo</span>
                        <% else %>
                            <span>Deshabilitado</span>
                        <% end %>
                        </td>
                     </tr>
                  <% end %>
                  </tbody>
               </table>
            </div>
            <!-- END table-responsive-->
            <div class='row actions' style='margin-top: 30px'>
              <div class='col-xs-10'>
                  <%= link_to 'Nuevo', new_service_path, class: 'btn btn-success' %>
                  <%= link_to 'Volver', root_path, class: 'btn btn-default' %>
              </div>
            </div>
         </div>
         
      </div>
      <!-- END panel-->
   </div>
   
</div>
