<h3>Crear nuevo service
   <small>Llene el formulario con los datos necesarios para crear un nuevo service</small>
</h3>
<!-- START panel-->
<div class="panel panel-default">
   <div class="panel-heading">Crear service</div>
   <div class="panel-body">
      <%= form_for service, html: {class: 'form-horizontal'} do |f| %>
         <div class="form-group">
            <label class="col-lg-2 control-label">Nombre</label>
            <div class="col-lg-10">
             <%= f.text_field :name, placeholder: 'Nombre del service', class: 'form-control', required:'required' %>
            </div>
         </div>
         <div class="form-group">
            <label class="col-lg-2 control-label">Descripcion</label>
            <div class="col-lg-10">
              <%= f.text_area :description, :cols => 122, :rows => 7 %>
             </div>
         </div>
         <div class="form-group">
            <label class="col-lg-2 control-label">Fecha</label>
            <div class="col-lg-10">
              <%= f.date_select :date, :order => [:day, :month, :year] %>
            </div>
         </div>
         <div class="form-group">
            <label class="col-lg-2 control-label">Avion reparado</label>
            <div class="col-lg-10">
             <%= f.select :plane_id, options_from_collection_for_select(Plane.all, :id, :matricula) %>
            </div>
         </div>
         


         <div class="form-group">
            <div class="col-lg-offset-2 col-lg-10">
         		<%= f.submit 'Guardar Service', class: 'btn btn-success'%>
         		<% if service.new_record? %>
         		  <%= link_to 'Volver', services_path, class: 'btn btn-danger' %>
         		<% else %>
         		  <%= link_to 'Volver', services_path(service), class: 'btn btn-danger' %>
         		<% end %>
         	</div>
         </div>
      <% end %>
   </div>
</div>
