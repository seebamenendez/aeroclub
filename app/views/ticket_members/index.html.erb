<div class="row">
   <div class="col-lg-12">
      <h3>Cuotas socios
         <small>Listado de cuotas de socios</small>
      </h3>

      <%= form_tag(ticket_members_path, method: 'get') do  %>
        <%= text_field_tag :q,'',  placeholder: 'Busque por cedula, nombre, apellido y fecha', :size => 42 %>
        <%= button_tag 'Buscar', type: 'submit',  class: 'btn btn-info btn-lg' %>
      <% end %>

   </div>
</div>
<!-- START row-->
<div class="row">
   <div class="col-lg-12">
      <!-- START panel-->
      <div class="panel panel-default">
         <div class="panel-body">
            <!-- START table-responsive-->
            <div class="table-responsive">
               <table class="table table-striped table-bordered table-hover">
                  <thead>
                     <tr>
                        <th>#</th>
                        <th>Nombre</th>
                        <th>Apellido</th>
                        <th>Cedula</th>
                        <th>Fecha</th>
                        <th>Precio</th>
                        <th>Estado</th>
                     </tr>
                  </thead>
                  <tbody>
                  <% @ticket_members.each do |ticket|%>
                     <tr>
                        <td><a href="<%= ticket_member_path(ticket) %>">Ver</a></td>
                        <td><%= ticket.person.name %></td>
                        <td><%= ticket.person.surname %></td>
                        <td><%= ticket.person.id_number %></td>
                        <td><%= ticket.date %></td>
                        <td><%= ticket.price %></td>
                        <td><%= ticket.status %></td>
                     </tr>
                  <% end %>
                  </tbody>
               </table>
            </div>
            <!-- END table-responsive-->

            <div class='row actions' style='margin-top: 30px'>
              <div class='col-xs-10'>
                  <%= link_to 'Nuevo', new_ticket_member_path, class: 'btn btn-success' %>
                  <%= link_to 'Volver', root_path, class: 'btn btn-default' %>
              </div>
            </div>
         </div>
      </div>
      <!-- END panel-->
   </div>
</div>







