<h3>Crear nuevo tipo vuelo
   <small>Llene el formulario con los datos necesarios para crear un tipo de vuelo</small>
</h3>
<!-- START panel-->
<div class="panel panel-default">
   <div class="panel-heading">Crear tipo de vuelo</div>
   <div class="panel-body">
      <%= form_for flights_type, html: {class: 'form-horizontal'} do |f| %>
         <div class="form-group">
            <label class="col-lg-2 control-label">Nombre</label>
            <div class="col-lg-10">
             <%= f.text_field :name_flight, placeholder: 'Nombre del tipo vuelo', class: 'form-control', required:'required' %>
            </div>
         </div>
         <div class="form-group">
            <label class="col-lg-2 control-label">Descripcion</label>
            <div class="col-lg-10">
              <%= f.text_field :description, placeholder: 'Descripcion del tipo vuelo', class: 'form-control' %>
             </div>
         </div>
         <div class="form-group">
            <label class="col-lg-2 control-label">Costo</label>
            <div class="col-lg-10">
              <%= f.text_field :price, placeholder: 'Costo', class: 'form-control', required:'required' %>
            </div>
         </div>
         <div class="form-group">
            <label class="col-lg-2 control-label">Estado</label>
            <div class="col-lg-10">
              <strong>Activo?</strong>
                <%= f.check_box :status, class: 'form-control' %>
            </div>
         </div>

         <div class="form-group">
            <div class="col-lg-offset-2 col-lg-10">
         		<%= f.submit 'Guardar tipo vuelo', class: 'btn btn-success'%>
         		<% if flights_type.new_record? %>
         		  <%= link_to 'Volver', flight_types_path, class: 'btn btn-danger' %>
         		<% else %>
         		  <%= link_to 'Volver', flight_types_path(@flight_type), class: 'btn btn-danger' %>
         		<% end %>
         	</div>
         </div>
      <% end %>
   </div>
</div>
