<div class="row">
   <div class="col-lg-12">
      <h3>Tipo de vuelos
         <small>Listado de tipo de vuelos del sistema</small>
      </h3>

      <%= form_tag(flight_types_path, method: 'get') do  %>
        <%= text_field_tag :q,'',  placeholder: 'Busque por nombre', :size => 40 %>
        <%= button_tag 'Buscar', type: 'submit',  class: 'btn btn-info btn-lg' %>
      <% end %>

   </div>
</div>
<!-- START row-->
<div class="row">
   <div class="col-lg-12">
      <!-- START panel-->
      <div class="panel panel-default">
         <div class="panel-body">
            <!-- START table-responsive-->
            <div class="table-responsive">
               <table class="table table-striped table-bordered table-hover">
                  <thead>
                     <tr>
                        <th>#</th>
                        <th>Nombre</th>
                        <th>Descripcion</th>
                        <th>Precio</th>
                        <th>Estado</th>
                     </tr>
                  </thead>
                  <tbody>
                  <% @flight_types.each do |flight_type| %>
                     <tr>
                        <td><a href="<%= flight_type_path(flight_type) %>">Ver</a></td>
                        <td><%= flight_type.name_flight %></td>
                        <td><%= flight_type.description %></td>
                        <td><%= flight_type.price %></td>
                        <td>
                        <% if flight_type.status %>
                            <span>Activo</span>
                        <% else %>
                            <span>Deshabilitado</span>
                        <% end %>
                        </td>
                     </tr>
                  <% end %>
                  </tbody>
               </table>
            </div>
            <!-- END table-responsive-->
            <div class='row actions' style='margin-top: 30px'>
              <div class='col-xs-10'>
                  <%= link_to 'Nuevo', new_flight_type_path, class: 'btn btn-success' %>
                  <%= link_to 'Volver', root_path, class: 'btn btn-default' %>
              </div>
            </div>
         </div>
         
      </div>
      <!-- END panel-->
   </div>
   
</div>
