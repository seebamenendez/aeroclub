<h3>Detalles de
   <small><%= @flight_type.name_flight %></small>
</h3>

<div class="">
   <div class="col-xs-6 panel">
     <div class="panel-heading">Detalles del tipo de vuelo</div>
     <table id="plane" style="clear: both" class="table table-bordered table-striped">
        <tbody>
           <tr>
              <td width="35%">Nombre</td>
              <td width="65%"><strong><%= @flight_type.name_flight %></strong>
              </td>
           </tr>
           <tr>
              <td width="35%">Descripcion</td>
              <td width="65%"><strong><%= @flight_type.description %></strong>
              </td>
           </tr>
           <tr>
              <td width="35%">Precio</td>
              <td width="65%"><strong><%= @flight_type.price %></strong>
              </td>
           </tr>
           <tr>
              <td width="35%">Estado</td>
              <td width="65%"><strong><%= @flight_type.status %></strong>

            </td>
           </tr>
        </tbody>
     </table>
     
     <a href="<%= edit_flight_type_path(@flight_type) %>" class='btn btn-success'>Modificar</a>

    <%= link_to 'Eliminar', @flight_type, method: :delete, data: {confirm: "Estas seguro que quiere eliminar?"}, class: 'btn btn-danger' %>
    <%= link_to 'Volver', flight_types_path, class: 'btn btn-default' %>
  </div>

<div class="row clearfix">
  <div class="col-xs-6 pull-left">
    
  </div>
  <div class="col-xs-3 pull-right">
   
  </div>
</div>
