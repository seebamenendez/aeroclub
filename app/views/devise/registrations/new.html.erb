<div class="block-center mt-xl wd-xl">
   <!-- START panel-->
   <div class="panel panel-dark panel-flat">
      <div class="panel-heading text-center">
         <a href="#">
            <img src="<%= image_path('angle/aeroclub.jpg') %>" alt="Image" width="240" height="80" class="block-center img-rounded" />
         </a>
      </div>
      <div class="panel-body">
         <p class="text-center pv">Registrarse para obtener acceso instantáneo.</p>
         <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: 'mb-lg'}) do |f| %>
          <%= devise_error_messages! %>
         <form role="form" data-parsley-validate="" novalidate="" class="mb-lg">
            <div class="form-group has-feedback">
               <label for="signupInputEmail1" class="text-muted">Email</label>
               <%= f.email_field :email, autofocus: true, placeholder: "Ingresar email", required: 'required', class: 'form-control' %>
            </div>
            <div class="form-group has-feedback">
               <label for="signupInputPassword1" class="text-muted">Contraseña</label>
                <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> characters minimum)</em>
                <% end %><br />
                <%= f.password_field :password, autocomplete: "off", placeholder: "Contraseña", required: 'required', class: 'form-control'  %>
            </div>
            <div class="form-group has-feedback">
               <label for="signupInputRePassword1" class="text-muted">Vuelva a escribir la contraseña</label>
               
               <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Vuelva A Escribir La Contraseña", required: 'required', class: 'form-control' %>
            </div>
            <button type="submit" class="btn btn-block btn-primary mt-lg">Crear cuenta</button>
         <% end %>
         <p class="pt-lg text-center">Tenes una cuenta?</p><a href="/users/sign_in" class="btn btn-block btn-default">Registrarse</a>
      </div>
   </div>
   <!-- END panel-->
</div>


